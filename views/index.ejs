<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="main bg-zinc-900 w-[90vw]">

    <!--  form created -->
    <form action="/create" method="post">
      <input
        class="block rounded-lg m-10 py-3 w-full text-white bg-zinc-700 p-2"
        type="text"
        placeholder="Title goes here..."
        name="title"
      />

      <textarea
        class="block rounded-lg m-10 mb-3 pt-3 w-full text-white bg-zinc-700 p-2"
        placeholder="Write your task here"
        name="details"
      ></textarea>
      <!-- button -->
      <input
        class="block rounded-lg ml-10 text-white bg-blue-700 p-2 px-6"
        type="submit"
        name=""
        id=""
        value="Create Task"
      />
      <!-- for the tasks  -->
      <div class="flex flex-wrap">
        <% if (files.length> 0) { %> <% files.forEach(val => { %>

        <div class="relative pl-10 pt-10">
          <!-- title of task -->
          <h1 class="w-72 text-zinc-500 px-3 py-4 rounded-md bg-zinc-800">
            <%= val %>
          </h1>

          <div class="flex flex-wrap mt-2">
            <!-- Read more  -->
            <a href="./<%= val %>" class="text-blue-500 inline-blocl mt-3"
              >Read More</a
            >
            <!-- Remove button  -->
            <a
              href="./<%= val %>/delete"
              class="absolute text-center p-1 w-20 text-white mt-2 rounded-full bg-red-900 bottom-0 right-0"
              >Remove</a
            >
          </div>
        </div>

        <% }); %> <% }else{ %>
          <!-- else no task mentioned  -->
        <h3 class="p-2 inline-block ml-10 mt-5 text-white bg-zinc-700 rounded-md">
          No task yet!
        </h3>

        <% } %>
      </div>
    </form>

    <script src="/javaScript/index.js"></script>
  </body>
</html>
